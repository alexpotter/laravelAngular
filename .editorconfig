trim_trailing_whitespace = true

[{package.json,circle.yml}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.ts]
indent_style = tab
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 4
