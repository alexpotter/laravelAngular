{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es7", "dom"],
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"baseUrl": "./resources/angular/app",
		"paths": {
			"@admin/*": ["admin/*"],
			"@client/*": ["client/*"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"typings",
		"vendor"
	],
	"angularCompilerOptions": {
		"enableIvy": true
	}
}
